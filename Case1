def sum_negative_between_extremes(A):
    if not A or len(A) < 2:
        return 0

    max_index = A.index(max(A))
    min_index = A.index(min(A))

    start = min(min_index, max_index) + 1
    end = max(min_index, max_index)

    sub_array = A[start:end]
    negative_sum = sum(x for x in sub_array if x < 0)
    return negative_sum

# Пример тест-кейса
A = [5, -3, 7, -1, 0, -6, 2, -4]
result = sum_negative_between_extremes(A)
print("Сумма отрицательных элементов между минимумом и максимумом:", result)